[v-cloak]{
    display: none;
}

.rotate90
  transform: rotate(90deg)

.rotate180
  transform: rotate(180deg)

.rotate270
  transform: rotate(270deg)

a:hover
  color #f8615a
  transition: all .3s

#page
  width: 70%

textarea
  width: 100%
  line-height: 1.5rem
  border: 0
  border-radius: 4px
  padding: 0
  transition: all .3s
  font-family: $code-font
  background: alpha(#ffffff, 0)

#page-content
  textarea
    border-radius: 6px
    padding: 6px 10px

    &:hover,
    &:focus
      background: rgb($grey-light-4)

  #tools-control-area
    padding: 10px
    margin-bottom: 10px
    border-radius: 6px
    transition: all .3s

    &:hover
      background: rgb($grey-light-3)

    a
      margin: 0 4px 0 4px
      padding: 4px 6px
      border-radius: 4px
      background: rgb($grey-light-1)

      &:hover
        color: $a-hover-light-color-1
        background: $a-hover-light-bg

#settings-wrap
  width: 30%

#settings
  font-family: Consolas
  margin-left: 15px
  padding: 10px 10px
  overflow: hidden
  border-radius: 8px
  background: $settings-bg
  box-shadow: 0 4px 8px 6px rgba(7, 17, 27, .06)
  transition: all .3s

  &:hover
    box-shadow: 0 4px 12px 12px rgba(7, 17, 27, .15)

.settings-block
  display: flex
  padding: 6px 10px
  border-radius: 6px
  transition: all .3s
  white-space: nowrap

  &:hover
    background: rgb($grey-light-1)

  .settings-label
    display: inline-block
    white-space: nowrap
    width: 100%

  .settings-select-wrap
    white-space: nowrap

    a
      padding-left: .4rem

      &:hover
        color: $a-hover-light-color-2

    .settings-selected
      display: inline-block

      span
        padding-right: .7rem

      i.fa.fa-chevron-down
        transition: all .3s

    .settings-select-options
      ul
        list-style-type: none
        padding: 0
        margin: 0
        max-height: 10rem
        overflow-y: scroll

      a
        display: block
        width: 100%
        height: 100%
        border-radius: 6px

        &:hover
          color: $a-hover-light-color-1
          background: $a-hover-light-bg

.hide
  display: none

@media screen and (max-width: 900px)
  #settings-wrap
    width: 100% !important

  #settings
    margin-top: 1rem
    margin-left: 0


if hexo-config('darkmode.enable') || hexo-config('display_mode') == 'dark'
  [data-theme='dark']
    #page-content
      #tools-control-area
        &:hover
          background: $dark-bg-3

        a
          background: $dark-bg-3

          &:hover
            background: $dark-bg-4
            color $a-hover-dark-color-1

      textarea
        color: $dark-font-color
        background: $dark-bg-5

        &:hover,
        &:focus
          background: $dark-bg-3

    #settings-wrap
      #settings
        background: $dark-bg-5

      .settings-block
        &:hover
          background: $dark-bg-3

        a:hover
            color $a-hover-dark-color-1


        .settings-select-options
          a:hover
            background: $dark-bg-4
